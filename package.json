{
  "name": "react-fade",
  "version": "0.0.2",
  "description": "Fades made simple in React.",
  "main": "dist/index.js",
  "scripts": {
    "lint": "standard src",
    "prebuild": "rm -rf dist",
    "build": "babel -d dist/ src/",
    "prepublish": "npm test && npm run build",
    "test": "npm run lint; mocha spec --compilers js:babel-register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bentatum/react-fade.git"
  },
  "author": "Benjamin Tatum <bentatum@me.com> (http://benjamintatum.com/)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bentatum/react-fade/issues"
  },
  "homepage": "https://github.com/bentatum/react-fade#readme",
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-eslint": "^6.0.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "eslint-plugin-jsx-control-statements": "^2.1.1",
    "expect": "^1.20.1",
    "jsx-control-statements": "^3.1.2",
    "mocha": "^2.4.5",
    "react": "^15.1.0",
    "react-addons-test-utils": "^15.1.0",
    "standard": "^7.1.0"
  },
  "dependencies": {
    "react-prefixr": "^0.1.0"
  },
  "peerDependencies": {
    "react": "*"
  },
  "babel": {
    "presets": [
      "react",
      "es2015",
      "stage-0"
    ],
    "plugins": [
      "jsx-control-statements",
      "transform-decorators-legacy"
    ]
  },
  "standard": {
    "globals": [
      "$",
      "beforeEach",
      "describe",
      "If",
      "it",
      "Else"
    ],
    "parser": "babel-eslint"
  }
}
